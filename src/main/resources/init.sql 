-- DROP TABLE IF EXISTS "Member";
-- DROP TABLE IF EXISTS "PasswordProfile";


CREATE TABLE "Member" (
  "UUID" varchar PRIMARY KEY,
  "username" varchar NOT NULL,
  "displayedName" varchar NOT NULL,
  "cellphone" varchar,
  "email" varchar,
  "isAccountExpired" boolean DEFAULT false,
  "isAccountLocked" boolean DEFAULT false,
  "isPasswordLocked" boolean DEFAULT false,
  "created_at" timestamp,
  "updated_at" timestamp
);

CREATE TABLE "PasswordProfile" (
  "id" INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  "UUID" varchar NOT NULL,
  "password" varchar(128) NOT NULL,
  "status" varchar,
  "created_at" timestamp,
  "expired_at" timestamp
);

ALTER TABLE "PasswordProfile" ADD FOREIGN KEY ("UUID") REFERENCES "User" ("UUID");
